<h1>Sign Up</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <div>
    <%= form.label :username, "Username:" %><br>
    <%= form.text_field :username, id: "user_username", value: "enter your name" %>
  </div><br>

  <div>
    <%= form.label :email, "Email:" %><br>
    <%= form.email_field :email, id: "user_email", placeholder: "example@example.com" %>
  </div><br>

  <div>
    <%= form.label :password, "Password:" %><br>
    <%= form.password_field :password, id: "user_password", placeholder: "Minimum 6 characters" %>
  </div><br>

  <%= form.submit "Submit" %>
<% end %>

