<h1>Edit User</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
    </h2>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |form| %>
  <div>
    <%= form.label :username, "Your user name here" %><br>
    <%= form.text_field :username, id: "user_username" %>
  </div><br>

  <div>
    <%= form.label :email, "Your email address" %><br>
    <%= form.email_field :email, id: "user_email", placeholder: "example@example.com" %>
  </div>

  <div>
    <%= form.label :password, "Create a password" %><br>
    <%= form.password_field :password, id: "user_password", placeholder: "Minimum 6 characters" %>
  </div><br>

  <%= form.submit "Update" %>
<% end %>